<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/fast_prev"
            android:layout_width="0.0px"
            android:layout_height="60.0dip"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:background="@drawable/transparent_button"
            android:scaleType="centerInside"
            android:src="@drawable/navigation_fast_back" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="42.0dip"
            android:layout_gravity="center"
            android:background="@color/light_divider_color" />

        <ImageView
            android:id="@id/prev"
            android:layout_width="0.0px"
            android:layout_height="60.0dip"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:background="@drawable/transparent_button"
            android:scaleType="centerInside"
            android:src="@drawable/navigation_common_back" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="42.0dip"
            android:layout_gravity="center"
            android:background="@color/light_divider_color" />

        <TextView
            android:id="@id/page_list"
            android:layout_width="0.0px"
            android:layout_height="60.0dip"
            android:layout_gravity="center"
            android:layout_weight="3.0"
            android:background="@drawable/transparent_button"
            android:gravity="center"
            android:text="Page"
            android:textColor="@color/tapatalkTextMenu"
            android:textSize="16.0dip"
            android:textStyle="bold" />

        <View
            android:layout_width="1.0px"
            android:layout_height="42.0dip"
            android:layout_gravity="center"
            android:background="@color/light_divider_color" />

        <ImageView
            android:id="@id/next"
            android:layout_width="0.0px"
            android:layout_height="60.0dip"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:background="@drawable/transparent_button"
            android:scaleType="centerInside"
            android:src="@drawable/navigation_common_forward" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="42.0dip"
            android:layout_gravity="center"
            android:background="@color/light_divider_color" />

        <ImageView
            android:id="@id/fast_next"
            android:layout_width="0.0px"
            android:layout_height="60.0dip"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:background="@drawable/transparent_button"
            android:scaleType="centerInside"
            android:src="@drawable/navigation_fast_forward" />
    </LinearLayout>

    <ImageView
        android:id="@id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/light_divider_color"
        android:gravity="center_vertical" />
</LinearLayout>