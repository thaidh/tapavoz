<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pull_refresh_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="0.0dip"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"/>

    <LinearLayout
        android:id="@+id/layout_quickrepley"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/compose_button_background"
        android:clickable="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/footer_text"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="6.0dip"
            android:layout_weight="1.0"
            android:imeOptions="actionDone"
            android:inputType="textLongMessage|textCapSentences|textMultiLine"
            android:maxLines="3"/>

        <ImageView
            android:id="@+id/footer_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingBottom="10.0dip"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip"
            android:src="@drawable/ic_send_holo_light"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:fillViewport="true"
        android:scrollbars="horizontal">

        <LinearLayout
            android:id="@id/compose_button_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>
</RelativeLayout>