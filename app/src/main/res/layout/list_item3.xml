<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/listLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/list3_baruser1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/list3_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/xlargeMargin"
            android:textColor="@color/white"
            android:textSize="@dimen/xlargeTextSize3" />

        <TextView
            android:id="@id/list3_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/xlargeMargin"
            android:text="2012"
            android:textColor="@color/white"
            android:textSize="@dimen/xlargeTextSize3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/list3_baruser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/list3_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/menu_usercp2" />

        <LinearLayout
            android:id="@id/layoutjd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@id/list3_jd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xlargeMargin"
                android:text="joindate"
                android:textSize="@dimen/xlargeTextSize2" />

            <TextView
                android:id="@id/list3_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xlargeMargin"
                android:text="post:"
                android:textSize="@dimen/xlargeTextSize2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/layoutjd"
            android:layout_toRightOf="@id/list3_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@id/list3_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xlargeMargin"
                android:text="userahskdhfjahskjfhaskhf"
                android:textSize="@dimen/xlargeTextSize2" />

            <TextView
                android:id="@id/list3_usertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xlargeMargin"
                android:text="KIA"
                android:textSize="@dimen/xlargeTextSize2" />
        </LinearLayout>
    </RelativeLayout>

    <com.nna88.voz.ui.JellyBeanSpanFixTextView
        android:id="@id/list3_contain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5.0dip"
        android:text="text\ntext\n"
        android:textSize="@dimen/xlargeTextSize2" />

    <TextView
        android:id="@id/textDevider"
        android:layout_width="fill_parent"
        android:layout_height="5.0dip" />
</LinearLayout>