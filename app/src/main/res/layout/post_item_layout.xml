<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/main_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white"
              android:orientation="vertical"
              >

    <RelativeLayout
        android:id="@+id/list3_baruser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16.0dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/post_avatar_imv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/post_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dp"
            android:layout_toRightOf="@id/post_avatar_imv"
            android:layout_toLeftOf="@+id/post_index_tv"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:text="userahskdhfjahskjfhaskhf"
            android:textColor="@color/blue"
            android:textSize="@dimen/xlargeTextSize2"/>

        <TextView
            android:id="@+id/post_index_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xlargeMargin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="#1"
            android:textColor="@color/primary_dark_material_light"
            android:textSize="@dimen/xlargeTextSize2"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:id="@+id/post_divider"
        android:layout_width="fill_parent"
        android:layout_height="12.0dp"
        android:layout_marginTop="16.0dp"
        android:background="@color/bg_gray"/>
</LinearLayout>